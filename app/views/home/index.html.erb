      <!--PARTIE MENU DE NAVIGATION A AFFICHER QUE POUR LES LOGINED ???-->
            <ul id="myTab" class="nav nav-tabs newest" role="tablist">
              <li role="presentation" class="active">
                <a href="#1" id="cat-1" role="tab" data-toggle="tab" aria-controls="1" aria-expanded="true">Nos poissons</a>
              </li>
            </ul>
      <!--/////////////////////////////////////////////////////////-->
          <div id="myTabContent" class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active" id="1" aria-labelledby="cat-1">
              <div class="row clearfix">
                <% @items.each do |element| %>
                  <div class="col-md-3 prdct-grid">
                    <div class="product-fade">
                      <div class="product-fade-wrap">
                        <div id="product-image">
                          <div class="item">
                            <%= image_tag(element.image, class: "img-responsive", id: element.id, alt: "") %>
                          </div>
                        </div>
                        <div class="product-fade-ct">
                          <div class="product-fade-control">
                            <div class="to-left">
                              <a href=""></a>
                              <a href=""></a>
                              <a href=""></a>
                            </div>
                            <span class="bag" style=' margin-left: 40px';></span>
                              <%=link_to 'Add To car',carts_add_item_path(element.id), class:"btn btn-to-cart", remote: true, method: :post %>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="product-name">
                      <%= link_to element.title, home_path(element.id)  %>
                    </div>
                    <div class="product-price">
                      <span>25</span> - <%= sprintf('%.2f', element.price.to_i) %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
