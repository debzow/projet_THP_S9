<div class="bgcolCart">

  <section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">DASHBOARD ADMIN</h1>
        <h2>Cart of : <%= current_user.email %> </h2>
     </div>
  </section>

  <div class="container mb-4">
      <div class="row">
          <div class="col-12">
              <div class="table-responsive" id="tableCart">
                  <table class="table table-striped" >
                      <thead>
                          <tr>
                              <th scope="col">Avatars</th>
                              <th scope="col">Id</th>
                              <th scope="col">Email</th>
                              <th scope="col">Orders</th>
                          </tr>
                      </thead>
                      <tbody>
                          <% @all_users.each do |user| %>
                          <tr>
                              <td><%= image_tag('avatar.png', class: "img-responsive", alt: "") %></td>
                              <td><%= user.id %></td>
                              <td><%= user.email %></td>
                              <% if Order.find_by(user_id: user.id) %>
                              	<% @order = Order.find_by(user_id: user.id) %>
                              	<td class="text-right">Number of orders : <%= user.orders.count %></td>
                              <% else %>
                              	<td class="text-right">No order for this user</td>
                              <% end %>
                          </tr>
                          <% end %>
                      </tbody>
                  </table>
              </div>
          </div>
          <br><br>
          <div class="col mb-2">
              <div class="row">
                  <div class="col-sm-12 col-md-6 text-right">
                      <%= link_to 'Retour', :root, class:"btn btn-link", id:"btnPayment" %>
                  </div>
                  <br><br><br>
              </div>
          </div>
      </div>
  </div>

</div>