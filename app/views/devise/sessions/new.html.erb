
<div class="bgcol">
<div class="container">
        <div class="login-form">
          <div class="main-div">
             <div class="panel">
                 <h2>Se connecter</h2>
                 <p>Veuillez entrer votre email et mot de passe</p>
             </div>
             <%= form_for(resource, as: resource_name,id:"Login", url: session_path(resource_name)) do |f| %> 
             
              <div class="form-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email Address", class:"form-control", id:"inputEmail" %>
              </div>

              <div class="form-group">
                  <%= f.password_field :password, autocomplete: "new-password",class:"form-control", id:"inputPassword",placeholder:"Password" %>            
              </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
              </div>

            <% end -%>  
                  <%= f.submit "Se connecter",class:"btn btn-success" %>
            <% end %>
             <%= render "devise/shared/links" %>
             

          </div>
        <p class="botto-text"> Designed by Love </p>
      </div>
  </div>
</div>
